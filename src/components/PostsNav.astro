---
import PostList, { type Props as PostListProps } from "./PostList.astro";

export type Props = {
  heading: string;
  posts: PostListProps["posts"];
};

const { heading, posts } = Astro.props;
---

<nav aria-labelledby="post-list-navigation">
  <h2 id="post-list-navigation" class="mt-0 mb-6 text-xl font-semibold">
    {heading}
  </h2>
  <PostList {...{ posts }} />
</nav>

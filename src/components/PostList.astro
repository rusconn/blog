---
import PostLink, { type Props as PostLinkProps } from "./PostLink.astro";

export type Props = {
  posts: PostLinkProps[];
};

const { posts } = Astro.props;
---

<ol class="m-0 list-none">
  {
    posts.map(({ title, date, slug }) => (
      <li>
        <PostLink {...{ title, date, slug }} />
      </li>
    ))
  }
</ol>

---
import TagLink, { type Props as TagLinkProps } from "./TagLink.astro";

export type Props = {
  tags: TagLinkProps[];
};

const { tags } = Astro.props;
---

<ul>
  {
    tags.map(({ slug, name }) => (
      <li>
        <TagLink {...{ slug, name }} />
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin: 0;
    list-style-type: none;

    & li {
      font-size: 0.75rem;
      line-height: 1rem;
      font-weight: 500;
    }
  }
</style>

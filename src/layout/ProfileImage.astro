---
import { AUTHOR_NAME } from "@/constants";

type Props = {
  height: number;
  width: number;
};

const { height, width } = Astro.props;
---

<img src="/images/profile.avif" height={height} width={width} alt={AUTHOR_NAME} decoding="async" />

<style>
  img {
    border-radius: 9999px;
    background-color: rgb(243 244 246);
    padding: 0.25rem;
  }
</style>

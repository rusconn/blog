---
import { AUTHOR_NAME } from "@/constants";

type Props = {
  size: number;
};

const { size } = Astro.props;
---

<img src="/images/profile.avif" width={size} height={size} alt={AUTHOR_NAME} decoding="async" />

<style>
  img {
    border-radius: 50%;
    background-color: rgb(243 244 246);
    padding: 0.25rem;
  }
</style>

{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "TAILWIND_MODE=watch astro dev --host",
    "build": "run-s build:*",
    "build:type": "yarn typecheck",
    "build:build": "astro build",
    "preview": "astro preview --host",
    "deploy": "run-s deploy:*",
    "deploy:build": "yarn build",
    "deploy:deploy": "firebase deploy",
    "fix": "run-s fix:*",
    "fix:type": "yarn typecheck",
    "fix:lint": "yarn lint --fix",
    "fix:format": "yarn format",
    "lint-staged": "lint-staged --concurrent false",
    "typecheck": "run-s typecheck:*",
    "typecheck:tsc": "tsc --noEmit",
    "typecheck:astro": "astro check",
    "lint": "eslint src --cache",
    "format": "prettier --write './**/*.{astro,js,jsx,ts,tsx,json,css,md}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/react": "^2.0.2",
    "@astrojs/tailwind": "^3.0.1",
    "@mapbox/rehype-prism": "^0.8.0",
    "astro": "^2.0.5",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-markdown": "^8.0.4",
    "rehype-raw": "^6.1.1"
  },
  "devDependencies": {
    "@types/mapbox__rehype-prism": "^0.8.0",
    "@types/node": "^18.11.12",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  }
}

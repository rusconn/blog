{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": "^18.16.0"
  },
  "scripts": {
    "dev": "TAILWIND_MODE=watch astro dev",
    "build": "run-s build:*",
    "build:type": "pnpm typecheck",
    "build:build": "astro build",
    "preview": "astro preview",
    "login": "firebase login",
    "deploy": "run-s deploy:*",
    "deploy:build": "pnpm build",
    "deploy:deploy": "firebase deploy --project rusconn-blog",
    "check": "run-s check:*",
    "check:type": "pnpm typecheck",
    "check:lint": "pnpm lint",
    "check:format": "pnpm format --check",
    "fix": "run-s fix:*",
    "fix:type": "pnpm typecheck",
    "fix:lint": "pnpm lint --fix",
    "fix:format": "pnpm format --write",
    "typecheck": "run-s typecheck:*",
    "typecheck:tsc": "tsc --noEmit",
    "typecheck:astro": "astro check",
    "lint": "eslint src --cache",
    "format": "prettier --cache './**/*.{astro,js,jsx,ts,tsx,json,css,md}'"
  },
  "dependencies": {
    "@astrojs/check": "^0.2.1",
    "@astrojs/react": "^3.0.3",
    "@astrojs/tailwind": "^5.0.2",
    "astro": "^3.3.0",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "rehype-external-links": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "~18.16.16",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^5.2.2"
  }
}
